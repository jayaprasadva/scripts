for old_filename in ./*
do
    old_filename="${old_filename#./}"
    new_filename="$(crudini --get "$old_filename" connection id)"
    if [ "$old_filename" != "$new_filename" ]
    then
        mv "$old_filename" "$new_filename"
    fi
done
